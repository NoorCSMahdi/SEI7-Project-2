<main>

    <div class="album py-5 bg-body-tertiary">
        <div class="container">
    
            <h1><%= title %></h1>
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

<table class="table">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Recipe Name</th>
            <th scope="col">Preparation</th>
            <th scope="col">Ingredient(s)</th>
            <th scope="col">Preparation Time</th>
            <th scope="col">Created</th>
            <th scope="col">Updated</th>
            <th scope="col">Action(s)</th>
            <!--<th scope="col">Updated At</th>-->
        </tr>
    </thead>

    <% let x=1; recipe.forEach(recipe => { %>
         <tr>
            <td><%= x %>. </td>
            <td><a href="/recipe/detail?id=<%= recipe._id %>"><%= recipe.recipeName %></a> <% if(recipe.isPublished){ %><i class="bi bi-star-fill text-warning"></i><% } %></td>
            <td><%= recipe.content %></td>
            <td><%= recipe.ingredient %></td>
            <td><%= recipe.duration %></td>
            <td><%= dayjs(recipe.createdAt).format('DD/MM/YYYY') %></td>
            <td>Updated <%= dayjs(recipe.updatedAt).fromNow(true) %> ago</td>
            <td>
                
            <a class="btn btn-sm btn-warning" href="/recipe/edit?id=<%= recipe._id %>"><i class="bi-pencil-fill"></i></a> <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#D<%= x %>">
                <i class="bi-trash3-fill"></i></button>
            
            <!-- <button type="submit" class="btn btn-sm btn-danger"><i class="bi-trash3-fill"></i></button> -->




  
  <div class="modal fade" id="D<%= x %>" tabindex="-1" aria-labelledby="exampleModalLabel<%= x %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-3 text-danger" id="exampleModalLabel<%= x %>">Are you sure you want to delete?</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Recipe <%= recipe.recipeName %> <% if(recipe.isPublished){ %><i class="bi bi-star-fill text-warning"></i><% } %>
        </div>
        <div class="modal-footer">
        <form method="POST" action="/recipe/delete?id=<%= recipe._id %>">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
      </div>
    </div>
  </div>                





                <!--<a type="button" class="btn btn-sm btn-warning" href="recipe/edit/<%= //recipe._id %>">Edit</a>
                <a type="button" class="btn btn-sm btn-danger" href="recipe/delete/<%= //recipe._id %>">Delete</a>-->
            </td>
            <!--<td><%= //article.updatedAt %></td>-->
         </tr>
    <% x++; }); %>

</table>

</div>

</div>
</div>

</main>