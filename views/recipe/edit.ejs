<main>

<div class="album py-5 bg-body-tertiary">
<div class="container">
    
    <h1><%= title %>: <span class="text-white"><%= recipe.recipeName %></span></h1>
    
    <form method="POST" action="/recipe/update" autocomplete="off">
    <div class="row g-3"> <!-- row-cols-1 row-cols-sm-2 row-cols-md-3 -->  

        <div class="col-lg-4 col-md-12 col-sm-12">

            <div class="mb-3 pb-1">
                <label for="recipeName" class="form-label">Recipe Name</label>
                <input type="hidden" name="id" value="<%= recipe._id %>">
                <input type="text" class="form-control" id="recipeName" name="recipeName" value="<%= recipe.recipeName %>">
            </div>

            <div class="mb-3 pb-1">
                <label for="duration" class="form-label">Duration to Prepare (in Minutes)</label>
                <input type="number" class="form-control" id="duration" name="duration" value="<%= recipe.duration %>">
            </div>

            <div class="mb-3">
                <label for="thumbnailFile" class="form-label">Photo</label>
                <input class="form-control" type="file" name="thumbnailFile" id="thumbnailFile">
                <input type="text" name="thumbnail" id="thumbnail" value="<%= recipe.thumbnail %>">(to be hidden)
            </div>

            <% let checkPublished = ""; let notPublished = "checked"; if(recipe.isPublished){ checkPublished = "checked"; notPublished = ""; } %>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="isPublished" id="isPublished1" value="true" <%= checkPublished %>>
                <label class="form-check-label" for="isPublished1">
                    Publish & Feature
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="isPublished" id="isPublished2" value="false" <%= notPublished %>>
                <label class="form-check-label" for="isPublished2">
                    Do Not Publish & Feature
                </label>
            </div>

        </div>

        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-floating pb-3">
                <textarea class="form-control" placeholder="Explain how to prepare this recipe" id="content" name="content"><%= recipe.content %></textarea>
                <label for="content">How to prepare (you can use HTML)</label>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-floating pb-3">
                <textarea class="form-control" placeholder="Type the Ingredient here" id="ingredient" name="ingredient"><%= recipe.ingredient %></textarea>
                <label for="ingredient">Ingredients (you can use HTML)</label>
            </div>
        </div>

        <div class="row">
            <div class="d-grid gap-2 col-4 col-sm-8 mx-auto">
            <button class="btn btn-warning" type="submit">Update Recipe</button>
            </div>
        </div>
            
        
    </div>
    </form>

</div>
</div>

</main>
